{
  "exclude": ["dist"],
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",

    "rootDir": "src",
    "outDir": "dist",

    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "strict": true,
    "skipLibCheck": true
  }
}
